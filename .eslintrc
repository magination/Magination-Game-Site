{
   "extends":"standard",
   "env":{
      "browser":true,
      "node":true,
      "es6":true
   },
   "plugins":[
      "react"
   ],
   "globals":{
      "$":false,
      "fabric":false
   },
   "ecmaFeatures":{
      "jsx":true
   },
   "parser":"babel-eslint",
   "rules":{
      "indent":[
         "error",
         "tab"
      ],
      "semi":[
         "error",
         "always"
      ],
      "react/jsx-uses-vars":2,
      "brace-style":[
         "error",
         "stroustrup",
         {
            "allowSingleLine":true
         }
      ],
      "no-tabs":0,
      "spaced-comment":0
   }
}
